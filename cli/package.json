{
  "name": "create-ez-app",
  "version": "0.0.1",
  "description": "Create web application \"EZ\"ly for different runtimes & frameworks with a single command",
  "type": "module",
  "bin": {
    "create-ez-app": "./dist/index.js"
  },
  "files": [
    "index.js",
    "cli",
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "typescheck": "tsc",
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo node_modules",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path ../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --write",
    "format:check": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path ../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --check",
    "prepublishOnly": "pnpm run build"
  },
  "engines": {
    "node": ">= 20.18 "
  },
  "keywords": [
    "create-ez-app",
    "node",
    "typescript",
    "express"
  ],
  "author": "Pon Raaj <ponraajvetrivel@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ponraaj/create-ez-app.git",
    "directory": "cli"
  },
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "@types/figlet": "^1.7.0",
    "chalk": "^5.4.1",
    "figlet": "^1.8.0",
    "fs-extra": "^11.3.0",
    "gradient-string": "^3.0.0",
    "nanospinner": "^1.2.2",
    "tsup": "^8.3.6"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4"
  }
}
